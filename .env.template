# Environment variables template
# Copy this file to .env and fill in your values

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here

# JWT Configuration
JWT_SECRET=YourSuperSecretKeyThatIsAtLeast32CharactersLong123456789
JWT_ISSUER=AtYourDoorStep
JWT_AUDIENCE=AtYourDoorStep

# Environment
ASPNETCORE_ENVIRONMENT=Production

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# S3/File Upload (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=

# Email Service (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
SMTP_FROM_NAME=AtYourDoorStep

# Push Notifications (Web Push VAPID)
# Generate VAPID keys: https://www.stephane-quantin.com/en/tools/generators/vapid-keys or use web-push CLI
VAPID_PUBLIC_KEY=your-vapid-public-key-here
VAPID_PRIVATE_KEY=your-vapid-private-key-here
VAPID_SUBJECT=mailto:support@atyourdoorstep.com

# Logging
LOG_LEVEL=Information
