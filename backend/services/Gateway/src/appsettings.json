{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Yarp": "Information"
      }
    }
  },
  "Jwt": {
    "Secret": "your-super-secret-key-change-in-production-minimum-32-characters",
    "Issuer": "AtYourDoorStep",
    "Audience": "AtYourDoorStep",
    "ExpirationMinutes": 60
  },
  "Cors": {
    "AllowedOrigins": ["http://localhost:5173", "http://localhost:3000"]
  },
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      },
      "products-route": {
        "ClusterId": "content-cluster",
        "Match": {
          "Path": "/api/products/{**catch-all}"
        }
      },
      "categories-route": {
        "ClusterId": "content-cluster",
        "Match": {
          "Path": "/api/categories/{**catch-all}"
        }
      },
      "testimonials-route": {
        "ClusterId": "content-cluster",
        "Match": {
          "Path": "/api/testimonials/{**catch-all}"
        }
      },
      "sitesettings-route": {
        "ClusterId": "content-cluster",
        "Match": {
          "Path": "/api/sitesettings/{**catch-all}"
        }
      },
      "heroslides-route": {
        "ClusterId": "content-cluster",
        "Match": {
          "Path": "/api/heroslides/{**catch-all}"
        }
      },
      "statistics-route": {
        "ClusterId": "content-cluster",
        "Match": {
          "Path": "/api/statistics/{**catch-all}"
        }
      },
      "uspitems-route": {
        "ClusterId": "content-cluster",
        "Match": {
          "Path": "/api/uspitems/{**catch-all}"
        }
      },
      "companystory-route": {
        "ClusterId": "content-cluster",
        "Match": {
          "Path": "/api/companystory/{**catch-all}"
        }
      },
      "deliverysettings-route": {
        "ClusterId": "content-cluster",
        "Match": {
          "Path": "/api/deliverysettings/{**catch-all}"
        }
      },
      "inquirytypes-route": {
        "ClusterId": "content-cluster",
        "Match": {
          "Path": "/api/inquirytypes/{**catch-all}"
        }
      },
      "contact-route": {
        "ClusterId": "content-cluster",
        "Match": {
          "Path": "/api/contact/{**catch-all}"
        }
      },
      "customers-route": {
        "ClusterId": "order-cluster",
        "Match": {
          "Path": "/api/customers/{**catch-all}"
        }
      },
      "orders-route": {
        "ClusterId": "order-cluster",
        "Match": {
          "Path": "/api/orders/{**catch-all}"
        }
      },
      "notifications-route": {
        "ClusterId": "notification-cluster",
        "Match": {
          "Path": "/api/notifications/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5001"
          }
        }
      },
      "order-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5002"
          }
        }
      },
      "notification-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5003"
          }
        }
      },
      "content-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5004"
          }
        }
      }
    }
  },
  "AllowedHosts": "*"
}
